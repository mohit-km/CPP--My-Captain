1st code


#include<iostream>
using namespace std;
int main()
{
	cout<<"size of char: "<<sizeof(char)<<" bytes";
	cout<<"\nsize of int: "<<sizeof(int)<<" bytes";
	cout<<"\nsize of float: "<<sizeof(float)<<" bytes";
	cout<<"\nsize of double: "<<sizeof(double)<<" bytes";
  return 0;
}


2nd code


#include<iostream>
using namespace std;
int main()
{
	float a,b;
	cout<<"Type value of a and b\n";
	cin>>a>>b;
	cout<<"values provided are\na= "<<a<<"\nb= "<<b;
	cout<<"\nMultiplication of "<<a<<" and "<<b<<" is "<<a*b;
  return 0;
}
